{
  "name": "ssb-ebt",
  "description": "Replicates SSB feeds using Epidemic broadcast trees",
  "version": "7.0.4",
  "author": "'Dominic Tarr' <dominic.tarr@gmail.com> (http://dominictarr.com)",
  "license": "MIT",
  "homepage": "https://github.com/ssbc/ssb-ebt",
  "repository": {
    "type": "git",
    "url": "git://github.com/ssbc/ssb-ebt.git"
  },
  "main": "index.js",
  "files": [
    "*.js",
    "debug/*.js"
  ],
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "base64-url": "^2.2.0",
    "epidemic-broadcast-trees": "^8.0.4",
    "lossy-store": "^1.2.3",
    "p-defer": "^3.0.0",
    "pull-defer": "^0.2.3",
    "pull-stream": "^3.6.0",
    "push-stream-to-pull-stream": "^1.0.4",
    "ssb-network-errors": "^1.0.0",
    "ssb-ref": "^2.13.0"
  },
  "devDependencies": {
    "cat-names": "^3.0.0",
    "dog-names": "^2.0.0",
    "mkdirp": "^1.0.4",
    "nyc": "^15.1.0",
    "promisify-4loc": "^1.0.0",
    "pull-paramap": "^1.2.2",
    "rimraf": "^2.7.1",
    "rng": "^0.2.2",
    "secret-stack": "^6.4.0",
    "ssb-bendy-butt": "^0.12.2",
    "ssb-caps": "^1.1.0",
    "ssb-client": "^4.9.0",
    "ssb-db": "^19.2.0",
    "ssb-db2": "^2.4.0",
    "ssb-generate": "^1.0.1",
    "ssb-index-feed-writer": "^0.6.0",
    "ssb-keys": "^8.1.0",
    "ssb-meta-feeds": "^0.19.0",
    "ssb-uri2": "^1.5.2",
    "ssb-validate": "^4.1.4",
    "standardx": "^7.0.0",
    "tap-spec": "^5.0.0",
    "tape": "^5.2.2"
  },
  "scripts": {
    "lint": "standardx --fix '**/*.js'",
    "test": "set -e; for t in test/*.js; do echo \"#Test: $t\"; tape $t | tap-spec; done",
    "test-verbose": "TEST_VERBOSE=1 npm test",
    "coverage": "nyc --reporter=lcov npm test"
  },
  "nyc": {
    "exclude": [
      "!**/node_modules/"
    ],
    "include": [
      "node_modules/epidemic-broadcast-trees/*.js",
      "*.js"
    ]
  }
}
